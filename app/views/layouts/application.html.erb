  </head>

  <body>
      <%= render 'shared/navbar' if current_u_ser %>
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
